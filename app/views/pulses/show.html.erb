<%= turbo_frame_tag "main_content" do %>
  <div class="card-purple">
    <h1><%= @pulse.job_role.capitalize %> Pulse</h1>
    <p><%= @pulse.job_description %></p>
    <p>Company: <%= @pulse.company_name %></p>
    <p>Company Description: <%= @pulse.company_description %></p>
    <%# <%= link_to edit_pulse_path(@pulse) do %>
      <%# <i class="fa-solid fa-pen-to-square"></i>
    <% end %> 
  </div>

<%= link_to "PRACTICE", pulse_question_path(@pulse, @pulse.questions.first), data: {turbo: false}, class:"btn-blue" %>

<h2>Progress Report by Category</h2>
<table class="table table-bordered">
  <thead>
    <tr>

      <th>Average Evaluation</th>

    </tr>
  </thead>
  <tbody>
    <% @pulse.pulse_categories.each do |category|%>
      <p><%= category.category.name %>: <%= category.average_rating %>/10</p>
    <% end %>
  </tbody>
</table>
<h3>Explore Interview Questions by Category</h3>
<%=link_to 'Review answers', question_answer_path(@pulse.questions.first, @pulse.questions.first.answers.first ), data: {turbo: false} %>
<% @pulse.pulse_categories.each do |category|%>
<%= link_to category.category.name, pulse_pulse_category_path(@pulse, category), data: {turbo_frame: "category_content"} %>
<% end %>
<%= turbo_frame_tag "category_content" do %>
<% end %>




</div>
<% end %>
