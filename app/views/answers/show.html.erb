  <div class="fghy" data-controller="answer">
    <!-- Duration Spent Display -->
    <div id="timer" class="timer">

      <span class="time-display"><%= @formatted_duration %></span>
    </div>
<div class="container drop-in" style="position: relative;" data-answer-target="slidingDiv">

    <div class="questions card-purple" style="display: flex; justify-content: center; margin-top: 60px;">
      <div class="vwew mt-3">
        <h5><%= "#{@question.question_number} <i class='fas fa-arrow-right'></i> #{@question.content}".html_safe %> </h5>
        <br>
        <div class="answer-content" style="width: 100%; height: 100px; overflow-y: auto;">
          <p><strong>Answer: </strong> <%= @answer.content %></p>
          <p>Rating: <%= @answer.evaluation || 'Not rated yet' %></p>
        </div>


  <%#= @question.question_number %<!--> / <%#= @question.pulse.questions.count %>
        <!-- Display Chat Review -->
        <div class="chat-review" style="margin-top: 20px;">
          <p><strong>Review:</strong> <%= @answer.chat_review || 'No review available.' %></p>
        </div>

      <% if @question.pulse_category.pulse.questions.last == @question %>
        <% unless @previous_question.nil? %>

        <%= link_to content_tag(:i, '', class: "fa-solid fa-arrow-up ", style: "color: #FFFFFF;") , question_answer_path(@previous_question, @previous_question.answers.last), class: "btn arrow-up", style: "position: absolute;left: -40px;top: 60px;",  data: { action: "click->answer#slideDown", answer_target: "down"} %>

        <% end %>
         <%= link_to content_tag(:i, '', class: "fa-solid fa-arrow-down", style: "color: #FFFFFF;") ,pulse_path(@question.pulse), class: "btn arrow-down", style: "position: absolute;left: -40px;bottom: 0px;", data: { action: "click->answer#slideDown", answer_target: "down"} %>
        <%#= link_to 'Complete!', root_path, class: " btn-black" %>
      <% else %>

        <%= link_to content_tag(:i, '', class: "fa-solid fa-arrow-down", style: "color: #FFFFFF;") , question_answer_path(@next_question, @next_question.answers.last), class: "btn arrow-down", style: "position: absolute;left: -40px;bottom: 0px;", data: { action: "click->answer#slideDown", answer_target: "down"} %>
        <% unless @previous_question.nil? %>
        <%= link_to content_tag(:i, '', class: "fa-solid fa-arrow-up", style: "color: #FFFFFF;") , question_answer_path(@previous_question, @previous_question.answers.last), class: "btn arrow-up", style: "position: absolute;left: -40px;top: 60px;",  data: { action: "click->answer#slideDown", answer_target: "down"} %>
        <% end %>

      <% end %>
      </div>
    </div>
  </div>
</div>
